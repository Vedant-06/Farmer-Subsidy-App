<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/nsubsidyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text="abhi"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/nmamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nsubsidyname"
            android:fontFamily="serif"
            android:text="amount: "
            android:textColor="#000"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/namount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nsubsidyname"
            android:layout_toRightOf="@id/nmamount"
            android:fontFamily="serif"
            android:text="abhi"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nmdocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namount"
            android:fontFamily="serif"
            android:text="document: "
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ndocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namount"
            android:layout_toRightOf="@+id/nmdocument"
            android:fontFamily="serif"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:text="adfjdfdfgdfg"
            android:textColor="#000"
            android:textSize="20sp" />


        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ndocument"
            android:layout_marginTop="5dp"
            android:id="@+id/verify"
            android:background="@drawable/roundedbutton"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="verify"
            />



        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/verify"
            android:background="@color/white"/>
    </RelativeLayout>



</android.support.v7.widget.CardView>