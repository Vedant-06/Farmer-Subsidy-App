<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:fitsSystemWindows="true"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/subsidyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text="Subsidy Name"
            android:textColor="#013220"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subsidyname"
            android:fontFamily="serif"
            android:text="Amount: "
            android:textColor="#013220"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subsidyname"
            android:layout_toRightOf="@id/mamount"
            android:fontFamily="serif"
            android:text="$$$$$"
            android:textColor="#013220"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:fontFamily="serif"
            android:text="Status: "
            android:textColor="#013220"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_toRightOf="@+id/mstatus"
            android:fontFamily="serif"
            android:text="OKAY"
            android:textColor="#013220"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>





    </RelativeLayout>
</android.support.v7.widget.CardView>